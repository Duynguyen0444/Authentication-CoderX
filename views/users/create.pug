extends ../layouts/common

block content
    h1 Create user
    h3
        a(href="/users" class="badge badge-warning") Users list
    if errors
        each error in errors
            .alert.alert-danger=error

    form(action="/users/create" method="POST" class="form-group")
        label(for="name") Name
        input#name(type="text" name="name" placeholder="Name" class="form-control" value=values ? values.name : "")
        br
        label(for="phone") Phone
        input#phone(type="text" name="phone" placeholder="Phone number" class="form-control" value=values ? values.phone : "")
        br
        label(for="email") Email
        input#email(type="text" name="email" placeholder="Email" class="form-control" value=values ? values.email : "" )
        br
        label(for="password") Password
        input#password(type="password" name="password" placeholder="Password" class="form-control" value=values ? values.password : "")
        br
        button(class="btn btn-primary") Add User
