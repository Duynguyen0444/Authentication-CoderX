extends ../layouts/common

block content
    h1 Register
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action='/authen/register' method='POST' class="form-group")
        div.mb-2
            label(for="email") Email
            input#email(name='email' type='email' placeholder="Email" class="form-control" value=values ? values.email : "")
        div.mb-2
            label(for="password") Password
            input#password(name='password' type="password" placeholder="Password" class="form-control" value=values ? values.password : "")
        div.mb-2
            label(for="name") Name
            input#name(type="text" name="name" placeholder="Name" class="form-control" value=values ? values.name : "")            
        div.mb-2
            label(for="phone") Phone
            input#phone(type="text" name="phone" placeholder="Phone" class="form-control" value=values ? values.phone : "")            
        button.btn.btn-primary(type='submit') Register