extends ../layouts/common

block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger=error

    form( method="POST" class="form-group")        
        label(for="email") Email
        input#email(type="text" name="email" placeholder="Email" class="form-control" value=values ? values.email : "" )
        br
        label(for="password") Password
        input#password(type="password" name="password" placeholder="Password" class="form-control" value=values ? values.password : "")
        br
        button(class="btn btn-primary") Login
    p
        |Don&apos;t you have an account? 
        a(href='/authen/register') Register.